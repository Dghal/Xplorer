Page {
    background-color: rgb(240, 236, 236);
}

.tavern-header {
    background-color: black;
    width: 100%;
    height: 280rpx;
    display:flex;
    flex-direction: column;
    top: 0;
    overflow-x: hidden;
}

.tavern-header .tab {
    width: 100%;
    height: 180rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    padding: 0 50rpx;
    overflow-x: hidden;
}

.tab .header {
    font-family: Georgia, 'Times New Roman', Times, serif;
    font-size: xx-large;
    font-weight: bold;
    color: white;
}

.tab .icon {
    height: 200rpx;
    width: 200rpx;
    padding-right: 70rpx;
}

.tavern-header .txt {
    font-family: Georgia, 'Times New Roman', Times, serif;
    font-size: 300;
    color: white;
    padding-left: 50rpx;
}

.post_list{
    margin-left: 4%;
    margin-right: 4%;
    margin-top: 35rpx;
    margin-bottom: 12rpx;
    width: 92%;
    overflow-x: hidden;
}

.header{
    padding-top: 3rpx;
    padding-left: 5rpx;
    margin-bottom: 5rpx;
    color: black;
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.username {
    font-style: bold;
    font-size: 16pt;
    margin-right: 4rpx;
}

.suffix {
    font-size: 13pt;
}

.content {
    display: flex;
    background-color: white;
    font-size: 12pt;
    border: 0;
    border-style: solid;
    border-radius: 3%;
    min-height: 150rpx;
    height: auto !important;
    padding-left: 35rpx;
    padding-right: 25rpx;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    margin-top: 13rpx;
}