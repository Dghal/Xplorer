<view class="background">
    <view class="welcome">Hop in</view>
    <view class="userInputField">
        <input placeholder="Username" placeholder-class="plas" class="inputs" type="nickname" bindinput="usernameInput" />
    </view>
    <view class="userInputField">
        <input placeholder="UID" placeholder-class="plas" class="inputs" type="number" bindinput="UIDInput" />
    </view>
    <view class="userInputField">
        <input placeholder="Password" placeholder-class="plas" class="inputs" password type="text" bindinput="passwordInput" />
    </view>
    <view class="userInputField">
        <input placeholder="Confirm Password" placeholder-class="plas" class="inputs" password type="text" bindinput="passwordInputack" />
    </view>
    <view class="reg" bindtap="register">
        Register
    </view>
    <view class="legal">
        By clicking register, you agree to our privacy policies and user agreements.
    </view>
    <view class="legal_portal" bindtap="legal_portal">
        Our Privacy Policies and User agreements
    </view>
</view>