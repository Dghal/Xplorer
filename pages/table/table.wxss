/* pages/table/table.wxss */
page {
    background-color: rgb(240, 236, 236);
}

.div {
    margin-top: 25rpx;
    margin-bottom: 25rpx;
}

.div .txt {
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    font-size: 15pt;
    font-weight: bold;
    padding-left: 20rpx;
    background-color: rgb(240, 236, 236);
}


.addinfo {
    width: 100%;
    height: auto;
    min-height: 300rpx !important;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    background-color: white;
    overflow-x: hidden;
    box-shadow: 4rpx 4rpx 10rpx 4rpx rgb(165, 164, 164);
}

.addinfo .heading {
    height: auto;
    margin-top: 25rpx;
    padding-left: 35rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.author_avatar .avatar {
    width: 120rpx;
    height: 120rpx;
    border: 0;
    border-style: solid;
    border-radius: 50%;
    box-shadow: 4rpx 4rpx 10rpx 4rpx rgb(165, 164, 164);
    margin-left: 5rpx;
    margin-right: 20rpx;
}

.author_username {
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    font-weight: bold;
    padding-left: 10rpx;
}

.addinfo .body {
    margin-top: 25rpx;
    padding-left: 75rpx;
    padding-right: 45rpx;
    height: auto;
    min-height: 200rpx !important;
    font-size: 11pt;
}

.addinfo .footer {
    margin-top: 75rpx;
    padding-bottom: 11rpx;
    text-align: right;
    margin-right: 3%;
}

.addinfo .footer .txt {
    font-size: x-small;
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
}

.ontable .tableuser {
    width: 100%;
    height: auto;
    min-height: 200rpx !important;
    margin-top: 25rpx;
    margin-bottom: 25rpx;
    background-color: white;
    box-shadow: 4rpx 4rpx 10rpx 4rpx rgb(165, 164, 164);
}

.ontable .tableuser .header {
    height: auto;
    margin-top: 15rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.tableuser .header .user_avatar .tableuser_avatar{
    width: 80rpx;
    height: 80rpx;
    margin-left: 35rpx;
    margin-top: 15rpx;
    border: 0;
    border-style: solid;
    border-radius: 50%;
    box-shadow: 4rpx 4rpx 10rpx 4rpx rgb(165, 164, 164);
}

.tableuser .header .username {
    padding-left: 20rpx;
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    font-size: 11pt;
    font-weight: bold;
}

.tableuser .body {
    margin-top: 15rpx;
    padding-left: 55rpx;
    padding-right: 25rpx;
    font-size: 10pt;
}